@model List<instructorwithdeptname>
@{
    Layout = "_MyLayout";
}
<h1>index</h1>
<table class="table table-hover table-bordered width =50%">
    

    <tr style="background-color :aquamarine">
        @* <td>ID</td> *@
        <td>Name</td>
        <td>Address</td>
        <td>Salary</td>
        <td>Department</td>
        <td>action</td>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
@*             <td>@item.id</td> *@
            <td>@item.name</td>
            <td>@item.address</td>        
            <td>@item.salary</td>
            <td>@item.departmentname</td>
            <td>
                <a asp-action="add" asp-controller="instructor" asp-route-id="@item.id" style="background-color : aquamarine" class="btn btn-alert-success">Edit</a>
                <a asp-action="Delete" asp-controller="instructor" asp-route-id="@item.id" style="background-color : red" class="btn btn-warning">Delete</a>
            </td>
        </tr>
    }
</table>
<a asp-controller="instructor" asp-action="AddNewUser" style="background-color:aquamarine " class="btn btn-alert-success">ADD</a>


